html
  body
    > .users, > .profile, > .friends
      display none
      padding 5px 0
    &[data-state="users"]
      > .users
        display block
      > .nav .users
        color blue
    &[data-state="profile"]
      > .profile
        display block
      > .nav .profile
        color blue
    &[data-state="friends"]
      > .friends
        display block
      > .nav .friends
        color blue

    > .nav
      display: flex;
      justify-content: space-around;
      padding: 10px;
      > span
        cursor pointer
        &:hover
          color lighten(#0000ff, 30)
    .blue-button
      cursor: pointer;
      text-align: center;
      padding: 5px;
      text-shadow: 0 1px rgba(0,0,0,0.1);
      background-color: #4d90fe;
      background-image: -webkit-linear-gradient(top,#4d90fe,#4787ed);
      color: white;
      border-radius: 3px;
      border: 1px solid #3079ed;
      &:hover
        border: 1px solid #2f5bb7;
        color: #fff;
        text-shadow: 0 1px rgba(0,0,0,0.3);
        background-color: #357ae8;
        background-image: -webkit-linear-gradient(top,#4d90fe,#357ae8);
    .header, .tab
      .image
        height 30px
        width 30px
        vertical-align middle
        margin-right 10px
      .logout
        position: absolute;
        right: 10px;
        padding: 7px 10px;
    > .friends
      text-align center
      .remove-friend
        text-decoration: line-through;
      .data
        text-align left
        display inline-block
        > div
          padding 5px 0
        .remove
          color red
          cursor pointer
      .actions
        padding 10px
        .add-friend
          margin-left 10px
        .submit
          margin-top: 20px;
          display: inline-block;
    > .profile
      text-align center
      .bold
        font-weight bold
      input:not(.private)
        min-width 250px
      .data
        text-align left
        display inline-block
        > div
          padding 5px 0
      .actions
        display: flex;
        justify-content: space-around;
        padding: 10px;
    > .users
      padding-top 10px
      > .user > .header
        border-radius: 3px;
        border: 1px solid lighten(#3079ed,30);
        background-color: lighten(#4d90fe,30);
        background-image: -webkit-linear-gradient(top,lighten(#4d90fe,30),lighten(#4787ed,30));
        text-align left
        font-size 20px
        position relative
        > .name
          vertical-align: middle;
          max-width: 220px
          overflow: hidden;
          display: inline-block;
          white-space: nowrap;
          text-overflow: ellipsis;

        > .time
          position: absolute;
          right: 0;
          font-size: 10px;
          top: 7px;
          right: 10px
          &:before
            content: 'Active '
      .tabs
        padding-left 30px
        .tab
          padding 5px
          &:nth-child(even)
            background: #F1F1F1;
          &:nth-child(odd)
            background: #FEFEFE;
          .content
            display inline-block
            vertical-align middle
            font-size 9px
            color gray
            text-overflow: ellipsis;
            overflow: hidden;
            white-space: nowrap;
            max-width: 300px;
          .image
            width 16px
            height 16px
        .tab[data-highlighted] .content
          font-weight bold
          color black



